<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context="com.sunrise.epark.activity.StopcarDetailAwayActivity" >

       <LinearLayout
        android:id="@+id/lay_head"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/main_color" >

                                <RelativeLayout
                                    android:id="@+id/back"
                                     android:background="@drawable/btn_selector"
        android:clickable="false" 
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center" >

            <ImageView
                                android:layout_width="12dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/arrow_left" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/detail_sc"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    
        <TextView
            android:id="@+id/stopcar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/lay_head"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="广州市  珠江新城大润发停车场"
            android:textColor="@color/text_color_light"
            android:textSize="18sp" />
        
        <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/stopcar"
        android:background="@color/line" />
        
        <RelativeLayout
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_below="@+id/line"
            android:background="@color/white" >

            <TextView
                android:id="@+id/stop_time"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:hint="@string/stop_time"
                android:paddingLeft="10dp"
                android:textColorHint="@color/text_hint"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/stop_starttime"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/stop_time"
                android:gravity="center"
                android:hint="@string/stop_starttime"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/text_hint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/stop_starttime"
                android:gravity="center"
                android:hint="@string/stop_endtime"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:textColorHint="@color/text_hint" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="5小时"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/stop_starttime"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="2015-07-07 10:25"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_above="@+id/textView2"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="10dp"
                android:textSize="15sp"
                android:text="2015-07-07 08:25"
                android:textColor="@color/text_color" />
        </RelativeLayout>
        
                <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/detail"
        android:background="@color/line" />
                
         <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/line1"
            android:background="@color/white" >

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="@string/money"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:textColor="@color/text_color_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="10dp"
                android:text="-00.00元"
                android:textColor="@color/red"
                android:textSize="20sp" />
          
        </RelativeLayout>
        
         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="50dp"
             android:layout_alignParentBottom="true"
             android:layout_alignParentLeft="true"
             android:layout_alignParentRight="true"
             android:background="@color/white" >

             <Button
                 android:id="@+id/go_stoping"
                 android:layout_width="140dp"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginBottom="2dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginTop="2dp"
                  android:background="@drawable/btn_selector"
        android:clickable="false" 
                 android:text="@string/go_stoping" />

             <Button
                 android:id="@+id/delay_paying"
                 android:layout_width="140dp"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                 android:layout_marginBottom="2dp"
                 android:layout_marginRight="10dp"
                 android:layout_marginTop="2dp"
                  android:background="@drawable/btn_selector"
        android:clickable="false" 
                 android:text="@string/delay_paying" />
             
         </RelativeLayout>
       

</RelativeLayout>
