<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <!-- 标题 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_color"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/sub_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/sub_d_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/arrow_left" />

            
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/subscribe_title"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fadingEdge="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 中间图片 -->

            <ImageView
                android:id="@+id/sub_detail_img"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:background="@drawable/tingchechang" />
            <!-- 停车场信息 -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/sub_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="珠江新城停车场"
                        android:textColor="#666666"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical" >

                        <ImageButton
                            android:id="@+id/sub_detail_daohang"
                            android:layout_width="60dp"
                            android:layout_height="30dp"
                            android:background="@drawable/btn_nav_click" />
                    </LinearLayout>
                </LinearLayout>
                <!-- 边框线 -->

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/bark_gray" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp" >

                    <TextView
                        style="@style/list_item_name"
                        android:text="@string/sub_type" />

                    <TextView
                        android:id="@+id/sub_detail_type"
                        style="@style/list_item_value"
                        android:text="室内停车场" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp" >

                    <TextView
                        style="@style/list_item_name"
                        android:text="@string/sub_address" />

                    <TextView
                        android:id="@+id/sub_detail_address"
                        style="@style/list_item_value"
                        android:text="广州市珠江新城珠江大厦负一层" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/list_item_name"
                        android:text="@string/sub_licence" />

                    <TextView
                        android:id="@+id/sub_detail_licence"
                        style="@style/list_item_value"
                        android:layout_weight="2"
                        android:text="粤AF363" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/list_item_name"
                        android:text="@string/sub_money" />

                    <TextView
                        android:id="@+id/sub_detail_money"
                        style="@style/list_item_value"
                        android:layout_weight="2"
                        android:text="34元" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/list_item_name"
                        android:text="@string/sub_start_time" />

                    <TextView
                        android:id="@+id/sub_detail_start"
                        style="@style/list_item_value"
                        android:layout_weight="2"
                        android:text="2015-01-01 12:00" />
                </LinearLayout>

                <!-- 结束时间 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal" >

                    <TextView
                       
                        style="@style/list_item_name"
                        android:text="@string/sub_end_time" />

                    <TextView
                         android:id="@+id/sub_detail_end"
                        style="@style/list_item_value"
                        android:layout_weight="2"
                        android:text="2015-01-01 12:00" />

                   
                </LinearLayout>
            </LinearLayout>
            <LinearLayout 
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <TextView 
                    android:id="@+id/sub_detail_tip"
                    android:text="@string/sub_detail_tip"
                    android:layout_width="fill_parent"
                    android:textColor="@color/red"
                    android:layout_height="wrap_content"/>
                <TextView 
                    android:id="@+id/sub_detail_tip1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:text="@string/sub_detail_tip1"/>
            </LinearLayout>
            <LinearLayout 
                  android:layout_height="50dp"
                  android:layout_width="fill_parent"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="20dp"
                  android:orientation="horizontal">
                  <LinearLayout 
                      android:layout_height="match_parent"
                      android:layout_width="match_parent"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="5dp"
                      android:layout_weight="1">
                      <Button 
                          android:id="@+id/sub_detail_ok"
                          android:background="@drawable/button_round_sure"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:paddingLeft="30dp"
                          android:paddingRight="30dp"
                          android:textColor="@color/white"
                          android:gravity="center"
                           android:textSize="18sp"
                          android:text="@string/sub_sure_enter"/>
                  </LinearLayout>
                  
                  <LinearLayout 
                      android:layout_height="match_parent"
                      android:layout_width="match_parent"
                      android:layout_weight="1"
                      android:layout_marginLeft="5dp"
                      android:layout_marginRight="10dp">
                      <Button 
                          android:id="@+id/sub_detail_cancel"
                          android:background="@drawable/button_round_sure"
                          android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:textColor="@color/white"
                           android:paddingLeft="30dp"
                          android:paddingRight="30dp"
                          android:textSize="18sp"
                          android:text="@string/sub_cancel_enter"/>
                  </LinearLayout>
              </LinearLayout>
        </LinearLayout>
        
         
    </ScrollView>

</LinearLayout>