<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/text_white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="dialog_default" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonGreen" parent="@android:style/Widget.Button">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@drawable/skin_color_button</item>
        <item name="android:background">@drawable/common_btn_green</item>
    </style>

    <style name="ButtonRed" parent="@android:style/Widget.Button">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@drawable/skin_color_button</item>
        <item name="android:background">@drawable/common_btn_red</item>
    </style>

    <!-- 黑色默认内容 -->
    <style name="textview_default_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 黑色标题 -->
    <style name="textview_title_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 单据内容 -->
    <style name="textview_order_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/order_content</item>
    </style>
    <!-- Tab页标题 -->
    <style name="tab_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- 单据标题 -->
    <style name="textview_title_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">26dip</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/order_title</item>
    </style>

    <!-- 单据输入框字体 -->
    <style name="edittext_order_content">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/order_edit</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dip</item>
    </style>

    <!-- 单据不可编辑输入框字体 -->
    <style name="edittext_uneditale_order_content">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dip</item>
    </style>

    <!-- 下拉框 -->
    <style name="spinner_content">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/order_edit</item>
        <item name="android:layout_height">35dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/spinnerbox</item>
    </style>

    <!-- 列表后面的删除、停用、启用按钮 -->
    <style name="delete_disable_btn">
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">70dip</item>
        <item name="android:layout_height">37dip</item>
    </style>

    <!-- 列表显示的每一个item的名字 -->
    <style name="list_item_name">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!-- 列表显示的每一个item的值 -->
    <style name="list_item_value">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">#393939</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <!-- 选项卡按钮 -->
    <style name="left_item_check">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/button_round_left_check</item>
    </style>

    <style name="left_item_uncheck">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/button_round_left</item>
    </style>

    <style name="right_item_check">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/button_round_right_check</item>
    </style>

    <style name="right_item_uncheck">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/button_round_right</item>
    </style>

    <style name="translucent" parent="android:Theme.NoTitleBar">
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- 支付遮罩层 dialog的遮罩层属性 --> 
    <style name="mask_dialog" parent="@android:style/Theme.Dialog"> 
        <item name="android:windowIsFloating">true</item> 
        <item name="android:windowIsTranslucent">true</item> 
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowBackground">@drawable/gray_cover</item> 
        <item name="android:backgroundDimEnabled">true</item> 
    </style> 
      <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    
</resources>